<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="35dp"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cbNumeroNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cbNumeroNotificaciones" />

            <CheckBox
                android:id="@+id/cbNotificacionesNoLeidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/cbNotificacionesNoLeidas" />

            <CheckBox
                android:id="@+id/cbPasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/cbPasos" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textAlignment="center"
                android:text="@string/textView" />


        </LinearLayout>
    </ScrollView>

